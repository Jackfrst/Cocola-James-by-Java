<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/activity_back_color"
    android:layout_height="match_parent"
    tools:context="james.cocola.app.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_add"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20dp"
                        android:textColor="@color/gray_text_color"
                        android:text="EMPLOYEE LOGIN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Theme.DNCC.TextInputLayout"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_margin="4dp"
                        android:hint="Employee ID"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:fontFamily="@font/roboto_regular"
                            android:textColorHint="@color/gray_text_color"
                            android:textColor="@color/gray_text_color"
                            android:id="@+id/login_emp_id"
                            android:maxLines="1"
                            android:inputType="text"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Theme.DNCC.TextInputLayout"
                        android:fontFamily="@font/roboto_regular"
                        app:errorEnabled="true"
                        android:layout_margin="4dp"
                        android:hint="Password"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:fontFamily="@font/roboto_regular"
                            android:textColorHint="@color/gray_text_color"
                            android:textColor="@color/gray_text_color"
                            android:inputType="textPassword"
                            android:id="@+id/login_password_edittext_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/regular_text_size"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right"
                        android:text="Forget Password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginBottom="25dp"
                        android:fontFamily="@font/roboto_medium"
                        android:id="@+id/login_btn_id"
                        android:padding="20dp"
                        android:textSize="@dimen/large_text_size"
                        android:textColor="@color/white"
                        android:text="Login"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>