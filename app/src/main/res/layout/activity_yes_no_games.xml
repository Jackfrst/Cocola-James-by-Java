<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/control_room"
    android:layout_height="match_parent"
    tools:context="james.cocola.app.CocolaJamesActivities.YesNoGamesActivity">


    <LinearLayout
        android:background="@drawable/dialog_blur_back"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/edit_text_back"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Which Image is belongs to the James Web Telescope ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="1dp"
                android:layout_margin="10dp"
                android:background="@drawable/int_game_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="200dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/hubble_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="200dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/james_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/game_nxt_btn"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/edit_text_back"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="15dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="NEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
